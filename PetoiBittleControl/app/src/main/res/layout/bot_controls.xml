<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/teal_200"
    tools:context=".mainController.MainControllerActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="6">

        <Button
            android:id="@+id/button_gesture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:background="@drawable/gesture_control"
            android:contentDescription="Gesturi" />

        <Button
            android:id="@+id/button_voice"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:background="@drawable/baseline_keyboard_voice_24"
            android:contentDescription="Voice" />

        <Button
            android:id="@+id/button_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:background="@drawable/baseline_arrow_upward_24"
            android:contentDescription="Up" />

        <Button
            android:id="@+id/button_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:contentDescription="Left" />

        <Button
            android:id="@+id/button_center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:background="@color/teal_200"
            android:contentDescription="Center" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:background="@drawable/baseline_arrow_forward_24"
            android:contentDescription="Right" />

        <Button
            android:id="@+id/button_down"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:background="@drawable/baseline_arrow_downward_24"
            android:contentDescription="Down" />

    </GridLayout>

</RelativeLayout>
